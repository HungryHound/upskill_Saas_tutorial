    <div class="well text-center col-md-3">
      <h4>1</h4>
      <h5>Pick CryptoCurrency</h5>    
      <%= form_for @cryptocurrency do |f| %>
        <div class="form-group">
          <%= f.select :coin, options_for_select(["BitCoin", "LiteCoin", "Ethereum", "Monero"]) %>
        </div>
        <%= @coin %>
      
        <div class="form-group">
          <%= f.label :holding %>
