        </div>
            
        <div class="form-group">
          <%= f.label :purchase_price %>
          <%= f.text_field :purchase_price, class: 'form-control' %>
        </div>
        
        <%= f.submit 'Submit', class: 'btn btn-default' %>

      <% end %>
      <h6>Capital</h6>
